	},
	"item": [
		{
			"name": "List All IPOs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/ipo/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"ipo",
						""
					]
				},
				"description": "Retrieve a paginated list of all IPOs with basic information."
			},
			"response": []
		},
		{
			"name": "Get IPO Details",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/ipo/1/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"ipo",
						"1",
						""
					]
				},
				"description": "Retrieve detailed information about a specific IPO."
			},
			"response": []
		},
		{
			"name": "Filter IPOs by Status",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/ipo/?status=upcoming",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"ipo",
						""
					],
					"query": [
