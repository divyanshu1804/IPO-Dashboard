			"name": "Search IPOs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/ipo/?search=TechCorp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"ipo",
						""
					],
					"query": [
						{
							"key": "search",
							"value": "TechCorp",
							"description": "Search query for company name or price band"
						}
					]
				},
				"description": "Search IPOs by company name or price band."
			},
			"response": []
